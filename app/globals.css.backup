  /* Tag 10 - Magenta */
  --tag-10: oklch(0.85 0.15 320);
  --tag-10-fg: oklch(0.35 0.15 320);
  --tag-10-dark: oklch(0.25 0.12 320);
  --tag-10-fg-dark: oklch(0.85 0.12 320);

  /* Tag 11 - Violet */
  --tag-11: oklch(0.85 0.15 280);
  --tag-11-fg: oklch(0.35 0.15 280);
  --tag-11-dark: oklch(0.25 0.12 280);
  --tag-11-fg-dark: oklch(0.85 0.12 280);

  /* Tag 12 - Indigo */
  --tag-12: oklch(0.85 0.15 260);
  --tag-12-fg: oklch(0.35 0.15 260);
  --tag-12-dark: oklch(0.25 0.12 260);
  --tag-12-fg-dark: oklch(0.85 0.12 260);

  /* Tag 13 - Sky */
  --tag-13: oklch(0.85 0.15 220);
  --tag-13-fg: oklch(0.35 0.15 220);
  --tag-13-dark: oklch(0.25 0.12 220);
  --tag-13-fg-dark: oklch(0.85 0.12 220);

  /* Tag 14 - Aqua */
  --tag-14: oklch(0.85 0.15 190);
  --tag-14-fg: oklch(0.35 0.15 190);
  --tag-14-dark: oklch(0.25 0.12 190);
  --tag-14-fg-dark: oklch(0.85 0.12 190);

  /* Tag 15 - Emerald */
  --tag-15: oklch(0.85 0.15 160);
  --tag-15-fg: oklch(0.35 0.15 160);
  --tag-15-dark: oklch(0.25 0.12 160);
  --tag-15-fg-dark: oklch(0.85 0.12 160);

  /* Tag 16 - Grass */
  --tag-16: oklch(0.85 0.15 135);
  --tag-16-fg: oklch(0.35 0.15 135);
  --tag-16-dark: oklch(0.25 0.12 135);
  --tag-16-fg-dark: oklch(0.85 0.12 135);

  /* Tag 17 - Amber */
  --tag-17: oklch(0.88 0.15 75);
  --tag-17-fg: oklch(0.38 0.15 75);
  --tag-17-dark: oklch(0.28 0.12 75);
