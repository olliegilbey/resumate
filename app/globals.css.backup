  --tag-18-dark: oklch(0.25 0.12 45);
  --tag-18-fg-dark: oklch(0.85 0.12 45);

  /* Tag 19 - Rose */
  --tag-19: oklch(0.85 0.15 10);
  --tag-19-fg: oklch(0.35 0.15 10);
  --tag-19-dark: oklch(0.25 0.12 10);
  --tag-19-fg-dark: oklch(0.85 0.12 10);
