@import "tailwindcss";

@variant dark (&:is(.dark *));

:root {
  --background: #ffffff;
  --foreground: #171717;
}

:root.dark {
  --background: #0a0a0a;
  --foreground: #ededed;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

/* Tag Color System - 20 OKLCH Colors */
:root {
  /* Tag 0 - Purple */
  --tag-0-bg: oklch(0.85 0.15 300);
  --tag-0-fg: oklch(0.35 0.15 300);

  /* Tag 1 - Blue */
  --tag-1: oklch(0.85 0.15 240);
  --tag-1-fg: oklch(0.35 0.15 240);
  --tag-1-dark: oklch(0.25 0.12 240);
  --tag-1-fg-dark: oklch(0.85 0.12 240);

  /* Tag 2 - Cyan */
  --tag-2: oklch(0.85 0.15 200);
  --tag-2-fg: oklch(0.35 0.15 200);
  --tag-2-dark: oklch(0.25 0.12 200);
  --tag-2-fg-dark: oklch(0.85 0.12 200);

  /* Tag 3 - Teal */
  --tag-3: oklch(0.85 0.15 180);
  --tag-3-fg: oklch(0.35 0.15 180);
  --tag-3-dark: oklch(0.25 0.12 180);
  --tag-3-fg-dark: oklch(0.85 0.12 180);

  /* Tag 4 - Green */
  --tag-4: oklch(0.85 0.15 150);
  --tag-4-fg: oklch(0.35 0.15 150);
  --tag-4-dark: oklch(0.25 0.12 150);
  --tag-4-fg-dark: oklch(0.85 0.12 150);

  /* Tag 5 - Lime */
  --tag-5: oklch(0.85 0.15 120);
  --tag-5-fg: oklch(0.35 0.15 120);
  --tag-5-dark: oklch(0.25 0.12 120);
  --tag-5-fg-dark: oklch(0.85 0.12 120);

  /* Tag 6 - Yellow */
  --tag-6: oklch(0.90 0.15 90);
  --tag-6-fg: oklch(0.40 0.15 90);
  --tag-6-dark: oklch(0.30 0.12 90);
  --tag-6-fg-dark: oklch(0.90 0.12 90);

  /* Tag 7 - Orange */
  --tag-7: oklch(0.85 0.15 60);
  --tag-7-fg: oklch(0.35 0.15 60);
  --tag-7-dark: oklch(0.25 0.12 60);
